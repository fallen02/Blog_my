---
import MainHead from './MainHead.astro';

interface Props{
    title: string;
    desc ?: string;
}

const { title, desc = "Hello World" } = Astro.props as Props

---

<html lang="en">
	<MainHead  {title} {desc}/>
	<body>
		<slot name='Header' />
		<slot />
	</body>
</html>

<style lang='scss'>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
	*{
		font-family: 'Poppins', sans-serif;
		margin: 0;
		padding: 0;
	}

</style>